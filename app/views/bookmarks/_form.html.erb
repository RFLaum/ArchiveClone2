<%= form_for [@story, @bookmark] do |f| %>
  <%= f.hidden_field :user_name %>
  <%= f.hidden_field :story_id %>
  <%= f.label :user_notes, 'Notes' %>
  <br>
  <%= f.text_area :user_notes %>
  <br>
  <%= f.label :private, 'Private bookmark' %>
  <%= f.check_box :private %>
  <br>
  <%= f.submit 'Save bookmark' %>
<% end %>
