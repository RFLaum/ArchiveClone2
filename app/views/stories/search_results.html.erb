<% if @error.present? %>
<p>Error: <%= @error %></p>
<% else %>
  <% if @results.empty? %>
  <p>No stories found.</p>
  <% end %>

  <%= will_paginate @results %>
  <%= page_entries_info(@results) %>

  <% @results.each do |record| %>
    <%= render 'stories/summary', story: record %>
  <% end %>
<% end %>
