<% #logger.debug "form log: #{this_chapter.class}" %>
<%= form_for this_chapter, url: url, html: { method: method } do |f| %>
  <%= f.label :title, "Chapter Title (optional):" %>
  <%= f.text_field :title %><br />
  <%= f.label(:body, "Chapter text:") %>
  <%= f.text_area(:body) %><br />
  <%= f.label(:tags, "Tags:") %>
  <%= f.text_field(:tags) %><br />
  <%= f.hidden_field(:number) %>
  <%= f.submit("Submit") %>
<% end %>
