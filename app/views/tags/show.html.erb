<% if logged_in? %>
  <% if current_user.tags.include?(@tag) %>
    <%= link_to 'Remove Favorite', remove_fave_path(@tag) %>
  <% else %>
    <%= link_to 'Favorite Tag', add_fave_path(@tag) %>
  <% end %>
   |
<% end %>
