<%# pass in meth (method name as symbol), disp (display name), type (input
type, as symbol), a collection of errors, and optionally an options hash
and/or a div_class string of additional classes to add to the div
%>

<% options ||= {} %>
<% div_class ||= '' %>
<% div_class += ' field' %>
<% unless errors[meth].empty? %>
  <% div_class += ' field_with_errors' %>
  <% disp += ' ' + errors[meth].join(', ') %>
<% end %>

<div class = "<%= div_class %>" >
  <%= label_tag
</div>
