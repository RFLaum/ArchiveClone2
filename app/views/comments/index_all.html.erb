<% #render partial: "all_comments", locals: { comments: @comments } %>

<% @comments.each do |comment| %>
  <dl>
    <dt>Author</dt>
    <dd><%= comment.author %></dd>
    <dt>Story</dt>
    <% story = comment.story %>
    <dd><%= link_to(story.title, story) %></dd>
    <dt>Content</dt>
    <dd><%= comment.content %></dd>
    <dt>Created</dt>
    <dd><%= comment.created_at %></dd>
    <dt>Updated</dt>
    <dd><%= comment.updated_at %></dd>
  </dl>
<% end %>
