<% #render partial: "all_comments", locals: { comments: @comments } %>

<% @comments.each do |comment| %>
  <dl>
    <dt>Author</dt>
    <dd><%= comment.author %></dd>
    <dt>Story</dt>
    <dd><%= name_link(comment.story) %></dd>
    <dt>Content</dt>
    <dd><%= comment.content %></dd>
    <dt>Created</dt>
    <dd><%= time_format(comment.created_at) %></dd>
    <dt>Updated</dt>
    <dd><%= time_format(comment.updated_at) %></dd>
  </dl>
<% end %>
